<!-- Views/Home/Index.cshtml -->
@using IdeaCollectionIdea.Common.Constants
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdeaUser> SignInManager

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <h2>Welcome, @User.Identity!.Name</h2>
        <hr />

        <div class="row g-3">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h6 class="text-muted">Browse Ideas</h6>
                        <a asp-controller="Ideas" asp-action="Index" class="btn btn-sm btn-outline-primary w-100 mt-2">
                            View All Ideas
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h6 class="text-muted">My Ideas</h6>
                        <a asp-action="MyIdeas" class="btn btn-sm btn-outline-success w-100 mt-2">
                            View My Ideas
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h6 class="text-muted">Submit New Idea</h6>
                        <a asp-controller="Ideas" asp-action="Create" class="btn btn-sm btn-primary w-100 mt-2">
                            Submit Idea
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h1>Idea Collection System</h1>
            <p class="lead">Share your ideas for university improvement</p>
            <div class="mt-4">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary me-2">Login</a>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary">Register</a>
            </div>
        </div>
    }
</div>